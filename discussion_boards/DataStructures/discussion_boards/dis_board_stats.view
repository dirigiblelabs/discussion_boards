{
  "viewName":"DIS_BOARD_STATS",
  "query":"SELECT a.DISB_ID,
	  a.DISB_SHORT_TEXT,
	  a.DISB_DESCRIPTION,
	  a.DISB_USER,
	  a.DISB_PUBLISH_DATE,
	  a.DISB_STATUS,
	  b.LATEST_PUBLISH_DATE,
	  b.REPLIES,
	  b.PARTICIPANTS,
	  c.TOTAL_VOTES,
	  c.RATING
FROM DIS_BOARD AS a 
LEFT JOIN DIS_COMMENT_STATS AS b ON b.DISB_ID = a.DISB_ID
LEFT JOIN DIS_BOARD_RATING AS c ON c.DISB_ID = a.DISB_ID
ORDER BY b.LATEST_PUBLISH_DATE, c.RATING, c.TOTAL_VOTES, b.REPLIES, b.PARTICIPANTS DESC"
}